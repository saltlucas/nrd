---
export interface Props {
	title: string;
}
import '../styles/app.css';
import Header from '../components/Header.astro';

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta property="og:title" content="New Revolution Digital">
		<meta property="og:type" content="article" />
		<meta property="og:description" content="Reach and engage your ideal customer through video.">
		<meta property="og:image" content="https://newrevdigital.com/assets/Neato.jpg">
		<meta property="og:url" content="https://newrevdigital.com">
		<meta name="twitter:card" content="summary_large_image">
	</head>
	<body>
		<Header />
		<slot />
	</body>
</html>

<style>
  body {
		margin: 0;
	}
</style>