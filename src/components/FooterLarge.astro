---
  import ScrollingText from './ScrollingText.astro';
  import ContactForm from './ContactForm.astro';
---
<footer class="footer-large section--full">
  <ScrollingText />
  <div class="footer-contact">
    <div class="footer-contact__info">
      <div class="contact__mode contact__mode--link">
        <p class="contact__label">Contact us</p>
        <p class="contact__text">Have an idea? Letâ€™s create it and scale it.</p>
      </div>
      <div class="contact__mode">
        <p class="contact__label">Want to reach someone quicker?</p>
        <p class="contact__text"><a href="tel:4153601133">415-360-1133</a></p>
        <p class="contact__text"><a href="mailto:Hello@newrevdigital.com">Hello@newrevdigital.com</a></p>
      </div>
    </div>
    <div class="footer-contact__form">
      <ContactForm />
    </div>
  </div>
</footer>

<style>
  @import '../styles/common/media-queries.css';

  .footer-large {
    background-color: var(--color-black);
    padding-bottom: 5rem;
    overflow: hidden;
  }

  .footer-highlight {
    font-size: 102px;
    color: #393939;
  }

  .footer-contact {
    color: var(--color-white);

    @media (--lg) {
      display: grid;
      grid-template-columns: 40% 60%;
      padding: 0 4rem;
    }
  }

  .contact__mode {
    max-width: 350px;
  }

  .contact__mode--link {
    margin-bottom: 6rem;
  }

  .contact__label {
    color: #acacac;
    font-size: 16px;
  }

  .contact__text {
    font-size: 2rem;

    @media (--lg) {
      font-size: 36px;
      letter-spacing: -0.3px;
      color: #FAFAFA;
    }
  }

  .footer-contact__info {
    margin-bottom: 2rem;

    @media (--lg) {
      margin-bottom: 2rem;
    }
  }

  a {
    color: #fff;
  }
</style>