---
const {alt, src, video, title, industry} = Astro.props;
---

<div class="client-card">
  <!-- <img loading="lazy" alt={alt} src={src}> -->
  <video class="client-card__video" controls muted loop>
    <source src={video} type="video/mp4">
    <a href="/media/cc0-videos/flower.mp4">MP4</a>
  </video> 
  <div class="client-card__content">
    <p class="client-card__title">{title}</p>
    <p class="client-card__industry">({industry})</p>
  </div>
</div>

<style>
  @import '../styles/common/media-queries.css';

  .client-card {
    @media (--lg) {
      flex-basis: 50%;
      width: 50%;
    }
  }

  img {
    display: block;
    width: 100%;
    pointer-events: none;
  }

  .client-card__content {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .client-card__video {
    width: 100%;
  }

  .client-card__title {
    font-size: 32px;
  }

  .client-card__industry {
    color: #acacac;
    font-size: 18px;
  }

</style>